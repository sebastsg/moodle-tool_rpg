{{!
  @template tool_rpg/character_list

  Example context (json):
  {
      "characters": [
            {
                "displayname": "Player",
                "level": 10
            }
      ]
  }
}}
<h3>{{#str}} characters, tool_rpg {{/str}}</h3>
<div class="tool_rpg-character-list">
    {{#characters}}
    <div class="tool_rpg-character-wrapper">
        <span>{{displayname}}</span>
        <span>{{#str}} levelx, tool_rpg, {{level}} {{/str}}</span>
    </div>
    {{/characters}}
</div>
