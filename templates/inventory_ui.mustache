{{!
  @template tool_rpg/inventory_ui

  Example context (json):
  {
      "items": [
          {
              "iteminstanceid": 1,
              "itemid": 1,
              "itemname": "Potion",
              "itemrarity": "common",
              "itemtype": "consumable",
              "itemicon": "https://moodle.local/item.png",
              "itemtooltip": "Heals some HP",
              "stack": 1
          },
          {
              "placeholder": true,
              "itemicon": "https://moodle.local/item.png",
              "itemtooltip": "This is a placeholder"
          }
      ]
  }
}}
<h3>Inventory</h3>
<div class="tool_rpg-inventory">
    {{#items}}
        <div class="tool_rpg-inventory-item {{#placeholder}}tool_rpg-inventory-placeholder{{/placeholder}}">
            <div>{{itemname}} {{#stackable}}({{stack}}){{/stackable}}</div>
            <div>
                {{#placeholder}}
                    <i class="{{itemicon}}" title="{{itemtooltip}}"></i>
                {{/placeholder}}
                {{^placeholder}}
                    <img src="{{{itemicon}}}" alt="{{itemtooltip}}">
                {{/placeholder}}
            </div>
            <div>
                {{#itemrarity}}<span>{{ itemrarity }}</span>{{/itemrarity}}
                {{#type}}<span>{{type}}</span>{{/type}}
            </div>
        </div>
    {{/items}}
</div>
